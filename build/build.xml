<project name="JavaStatistics" default="compress">
		
	<property name="module.name" value="edu.ucdenver.bios.javastatistics" />
	<property name="version" value="1.1.0" />
	<property name="source.dir" value="${basedir}/../src" />
    <property name="target.dir"  value="${basedir}/bin"/>
	<property name="javadoc.dir" value="${target.dir}/javadoc/${module.name}-${version}-javadoc" />
	<property name="thirdparty.dir" value="${basedir}/../../thirdparty" />
    <property name="glimmpse.results.dir"  value="${basedir}/GLIMMPSEresults"/>
	<property name="gwt.dir" value="${target.dir}/gwt" />
	<property name="gwt.module.name" value="${module.name}.javastatistics" />

	<fileset id="thirdparty.libs" dir="${thirdparty.dir}">
		<include name="ApacheCommonsMath/2.1/lib/commons-math-2.1.jar" />
		<include name="jsc/1.0/lib/jsc.jar" />
		<include name="junit/4.7/lib/junit-4.7.jar" />
	</fileset>
	
	<path id="library.path">
		<fileset refid="thirdparty.libs"/>
	</path>
		
    <target name="clean">
    	<delete dir="${target.dir}"/>
        <delete dir="${glimmpse.results.dir}"/>
    	<delete file="${basedir}/GLIMMPSEresults.zip" />
    </target>
	
    <target name="setup" depends="clean">
        <mkdir dir="${target.dir}"/>
        <mkdir dir="${target.dir}/classes"/>
    	<mkdir dir="${gwt.dir}" />
        <mkdir dir="${glimmpse.results.dir}"/>
    </target>

	<!-- Run javadoc -->
	<target name="javadoc">
      <javadoc
           access="public"
           destdir="${javadoc.dir}"
           author="true"
           version="true"
           use="true"
           windowtitle="UC Denver Biostatistics - Java Statistics Package API Specification"
         >
        <fileset dir="${source.dir}" defaultexcludes="yes">
            <include name="**/*.java"/>
        </fileset>
      </javadoc>
	</target>
	
	<!-- Compilation targets: this module produces a java library -->
	
	<!-- Java library compile -->
    <target name="compile" depends="setup">
      <javac debug="true"
             deprecation="on"
			 listfiles="true"
			 debuglevel="lines,vars,source"
			 srcdir="${source.dir}"
             destdir="${target.dir}/classes"
             classpathref="library.path"
      />
    </target>

	<!-- Jar file creation -->
	<target name="compress" depends="compile,javadoc">
		<jar destfile="${target.dir}/${module.name}-${version}.jar" 
			basedir="${target.dir}/classes" includes="**/*.class">
			<manifest>
				<attribute name="Author" value="Sarah Kreidler"/>
				<section name="Shared">
					<attribute name="Title" value="${project}"/>
					<attribute name="Vendor" value="CU Denver Biostatistics Department"/>
				</section>
				<section name="Copyright">
					<attribute name="Copy" value="(C) CU Denver Biostatistics Department"/>
				</section>
			</manifest>
		</jar>
	</target>	
	
	<!-- Extra Distribution targets: the following targets create sourve, javadoc
		and GLIMMPSE testing results distribution -->
	
	<!-- Create the javadoc distribution  -->
	<target name="javadoc.distribution" depends="javadoc">
		<jar destfile="${target.dir}/${module.name}-${version}-javadoc.jar" basedir="${javadoc.dir}/.." >
			<manifest>
				<attribute name="Author" value="Sarah Kreidler"/>
				<section name="Shared">
					<attribute name="Title" value="JavaStatistics Javadoc"/>
					<attribute name="Vendor" value="CU Denver Biostatistics Department"/>
				</section>
				<section name="Copyright">
					<attribute name="Copy" value="(C) CU Denver Biostatistics Department"/>
				</section>
			</manifest>
		</jar>
	</target>
	
	<!-- Create the source distribution -->
	<target name="source.distribution">
		<jar destfile="${target.dir}/${module.name}-${version}-source.jar" basedir="${basedir}/../.." 
			includes="JavaStatistics/*,
			JavaStatistics/build/build.xml,
			JavaStatistics/data/**,
			JavaStatistics/sas/**,
			JavaStatistics/src/**,
			JavaStatistics/text/results/**">
			<manifest>
				<attribute name="Author" value="Sarah Kreidler"/>
				<section name="Shared">
					<attribute name="Title" value="${module.name} Source Code"/>
					<attribute name="Vendor" value="CU Denver Biostatistics Department"/>
					<attribute name="Implementation-Version" 
					                 value="${version}"/> 
				</section>
				<section name="Copyright">
					<attribute name="Copy" value="(C) CU Denver Biostatistics Department"/>
				</section>
			</manifest>
		</jar>
	</target>
	
	<!-- Create the distribution containing validation results -->
	<target name="text.results.distribution">
		<jar destfile="${target.dir}/${module.name}-${version}-results.jar" basedir="${basedir}/../text/" 
			includes="results/*">
			<manifest>
				<attribute name="Author" value="Sarah Kreidler"/>
				<section name="Shared">
					<attribute name="Title" value="JavaStatistics Source Code"/>
					<attribute name="Vendor" value="CU Denver Biostatistics Department"/>
				</section>
				<section name="Copyright">
					<attribute name="Copy" value="(C) CU Denver Biostatistics Department"/>
				</section>
			</manifest>
		</jar>
	</target>
	
	<!-- Distribution submitted for validation by a journal -->
	<target name="glimmpse.paper.distribution" depends="compress"> 
		<mkdir dir="${glimmpse.results.dir}/text/results" />
		<mkdir dir="${glimmpse.results.dir}/lib" />
		<copy todir="${glimmpse.results.dir}">
		  <fileset dir="${basedir}/.." includes="data/**"/>
		</copy>
		<copy todir="${glimmpse.results.dir}">
			  <fileset dir="${basedir}/../.."  
			  		includes="thirdparty/ApacheCommonsMath/**,
			  		thirdparty/junit/**,
			  		thirdparty/jsc/**" />
		</copy>
		<copy file="../src/edu/cudenver/bios/power/test/paper/runPaperResults.bat" todir="${glimmpse.results.dir}" />
		<copy file="../src/edu/cudenver/bios/power/test/paper/README.txt" todir="${glimmpse.results.dir}" />
		<copy file="${target.dir}/${module.name}-${version}.jar" todir="${glimmpse.results.dir}/lib/" />
		<zip destfile="${basedir}/GLIMMPSEresults.zip"
		       basedir="${glimmpse.results.dir}">
		</zip>
	</target>
		
</project>